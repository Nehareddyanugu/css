<nav>
  <% if (!user) { %>
    <a href="/auth/login?redirect=<%= encodeURIComponent(request.originalUrl) %>">Login</a>
    <a href="/auth/register?redirect=<%= encodeURIComponent(request.originalUrl) %>">Register</a>
  <% } else { %>
    <form method="POST" action="/auth/logout" style="display: inline;">
      <button type="submit">Logout</button>
    </form>
  <% } %>
</nav>
